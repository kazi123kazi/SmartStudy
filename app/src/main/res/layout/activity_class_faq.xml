<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassFAQActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Frequently Ask Question"
                android:textSize="30sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="1.This app is suitable for which standard student?"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Ans. This is suitable for all those are Class 11 or class 12 or those who are preaparing for JEE mains/Adv or NEET."
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="2.What are the features of this app?"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Ans.First of all it is completely free.Also your privacy is most important for us,there is Log in and Sign up options also present.You  will find all +2 level resources including video lecture ,question paper and books also.More feature are coming soon."
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="3.How can I get / find questions ?"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Ans: Goto to your specific Class and then click on the subject you prefer to ."
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                />



        </LinearLayout>
    </ScrollView>


</RelativeLayout>